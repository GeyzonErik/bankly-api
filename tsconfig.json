{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@config/*": [
        "config/*"
      ]
    },
  },
  "_moduleAliases": {
    "@": "dist",
    "@common": "dist/common",
    "@modules": "dist/modules",
    "@config": "dist/config"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}